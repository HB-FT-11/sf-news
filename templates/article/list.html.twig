{% extends 'base.html.twig' %}

{% block title %}
  Hello ArticleController!
{% endblock %}

{% block body %}
  <div class="max-w-[900px] mx-auto">
    <h1 class="text-center my-6 text-4xl">Articles</h1>
    <div>
      {% for article in articles %}
        <div class="border-gray-400 border-[1px] mb-4 p-3 rounded-md mx-2 shadow-lg group">
          <h2 class="text-2xl">{{ article.title }}</h2>
          <h3>{{ article.createdAt|date('d/m/Y') }}</h3>
          <div class="text-right">
            <a href="#" class="bg-blue-700 text-white hover:bg-blue-900 transition-all px-4 py-2 text-xs">Voir l'article <span class="hidden group-hover:inline">➡️</span></a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
